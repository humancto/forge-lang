@test
define test_structured_error() {
    let mut err_msg = ""
    let mut err_type = ""
    try {
        let x = 1 / 0
    } catch err {
        err_msg = err.message
        err_type = err.type
    }
    assert(len(err_msg) > 0)
    assert_eq(err_type, "ArithmeticError")
}

@test
define test_error_type_classification() {
    let mut caught_type = ""
    try {
        let x = undefined_var_xyz
    } catch err {
        caught_type = err.type
    }
    assert(len(caught_type) > 0)
}
