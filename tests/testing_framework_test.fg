@test
define test_assert_ne() {
    assert_ne(1, 2)
    assert_ne("hello", "world")
    assert_ne(true, false)
}

@test
define test_assert_throws() {
    assert_throws(fn() {
        let x = 1 / 0
    })
}

@test
define test_assert_throws_with_error() {
    assert_throws(fn() {
        assert(false)
    })
}

